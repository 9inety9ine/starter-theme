{%- if predictive_search.performed -%}
    <div id="predictive-search-results">
        
      <div class="wrap">
       
      {%- if predictive_search.resources.products.size < 1 -%}
        <p class="no-results">No results for “{{ predictive_search.terms }}”</p>
      {%- else -%}
        <ul id="predictive-search-results-list" class="predictive-search__results-list products" role="listbox" aria-labelledby="predictive-search-products">
        {%- for product in predictive_search.resources.products limit:4 -%}
          <li class="predictive-search__list-item list-item-{% increment count %}" role="option">
            {% render "product-card", product: product %}
          </li>
        {%- endfor -%}
      {% endif %}
        {%- unless predictive_search.resources.products.size < 1 -%}
          <li class="list-item-button" role="option">
            <button class="predictive-search__item" tabindex="-1">View all search results for “{{ predictive_search.terms }}” &rarr;</button>
          </li>
        {% endunless%}
        </ul>
      
      </div>
    
    </div>
{%- endif -%}
  