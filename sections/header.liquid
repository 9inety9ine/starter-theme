<div class="wrap">

    <button class="toggle"><img src="{{ "icon-menu.svg" | asset_url }}"></button>
    
    <a href="{{ shop.url }}" class="branding"><img src="{{ "logo-placeholder.svg" | asset_url }}"></a>

    {% render "nav-desktop" %}
    
    {% render "nav-tools" %}

</div>

{% if section.settings.sticky == true %}
<style type="text/css">
  header { position: sticky; top: 0; z-index: 9; }
</style>
{% endif %}

{% schema %}
{
  "name": "Header",
  "tag": "header",
  "class": "main",
  "settings": [
    {
      "type": "checkbox",
      "id": "sticky",
      "label": "Enable sticky header"
    }
  ]
}
{% endschema %}